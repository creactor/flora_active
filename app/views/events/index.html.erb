<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<div class="container">
<% @events.each do |event| %>
  <div class="row card">
    <%= link_to  'events/'+ event.id.to_s, method: 'get', class: 'display' do%>
    <div class="col-lg-8">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h3 class="panel-title row">
            <div class="col-md-6">
              <%= event.name%>
            </div>
            <div class="pull-right">
              by event.creator
            </div>
          </h3>
        </div>
        <div>
          <%= event.content %>
        </div>
        <div class="panel-footer pull-right">
          <div>
            event.date
          </div>
        </div>
        <div class="panel-footer pull-left">
          <div>
            ID : <%= event.id%>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
<% end %>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.content %></td>
        <td><%= event.user %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>
<script>
function openModal(){
  $("#myModal").modal('show');
}
</script>
