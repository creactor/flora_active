<nav class="navbar menu center-block">
  <div class="container-fluid">
    <ul class="nav navbar-nav">
      <li><%= link_to  'Начало', '/', method: 'get'%></li>
      <li><%= link_to  'Резервация', method: 'get'%></li>
      <li><%= link_to  'Програма', method: 'get'%></li>
